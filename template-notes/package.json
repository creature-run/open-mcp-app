{
  "name": "mcp-template-notes",
  "version": "0.0.4",
  "description": "An MCP App for adding notes to your Creature projects, with a full-featured Markdown editor.",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite build --watch\" \"nodemon -q --ext ts --watch src/server --exec 'npx tsx src/server/dev.ts'\"",
    "build": "npm run build:ui && npm run build:server",
    "build:ui": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "typecheck": "tsc --noEmit"
  },
  "creature": {
    "name": "notes",
    "publish": true,
    "hosted": {
      "url": "https://mcp-notes.creature.run/api/mcp"
    }
  },
  "dependencies": {
    "@creature-ai/sdk": "^0.1.15",
    "@milkdown/kit": "^7.8.0",
    "@milkdown/plugin-listener": "^7.8.0",
    "@milkdown/react": "^7.8.0",
    "mongodb": "^6.12.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vercel/node": "^3.0.0",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-singlefile": "^2.0.3"
  }
}